        dev-python/python-jose
        >=dev-python/pyzmq-18
        
        dev-python/empy
        test ? (dev-python/codecov
                dev-python/coverage
        dev-python/graphviz
        dev-python/tqdm
        dev-python/pygments
        dev-python/beautifulsoup
